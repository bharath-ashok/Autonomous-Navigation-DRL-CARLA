# Use an official CARLA image as the base
FROM carlasim/carla:0.9.15

USER root
# Install any dependencies required for your training script
RUN apt-get update && apt-get install -y \
    python3-pip \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt /workspace/requirements.txt
RUN pip3 install --no-cache-dir -r /workspace/requirements.txt

# Set the working directory
WORKDIR /workspace

# Copy your training script and other necessary files
COPY . /workspace/

# Ensure the training script is executable
RUN chmod +x train.py

# Expose necessary ports (CARLA defaults)
EXPOSE 2000-2002

# Command to run your training script
CMD ["python3", "train.py"]
